extends layout

block layout-content
  div.container
    div.d-none.d-sm-none.d-md-block 
      h1.text-center.text-uppercase GET employer/company
    div.login-card.d-flex.rounded-lg.overflow-hidden.bg-white
      div.login-message.d-none.d-sm-none.d-md-flex.flex-column.justify-content-center.p-5
        img(src='/welcome.svg', class="img-fluid mb-3")
        h2 Company Information
      div.login-body
        div.login-body-wrapper.mx-auto
          p Departments
            ul
              each department in company.departments
                li #{department.name || "N/A"}
          p Locations
            ul
              each location in company.locations
                li #{location.line1 || "N/A"} #{location.line2} #{location.city || "N/A"}, #{location.state || "N/A"} #{location.postal_code || "N/A"} #{location.country || "N/A"}
          p Accounts
            ul
              each account in company.accounts
                li #{account.institution_name || "N/A"} - #{account.account_name || "N/A"} - #{account.account_type || "N/A"} - #{account.account_number || "N/A"} - #{account.routing_number || "N/A"}
        
          h4
            a(href=`/directory`) See Directory Users